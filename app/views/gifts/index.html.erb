<div class='row'>
	<div class='span2'>
		<img src='/assets/beans.jpg' width='144' height='144' class='img-circle'/>
	</div>
	<div class='span5'>
		<h1>
		 Maria-Gabriella
		</h1>
		<p class='lead'>
			<i class='icon-gift'></i>
		 	Black with some chocolate on the side
		</p> 
	</div>
</div>

<div class='row form-row'>
	<div class='span8'>
		<h4>
			Give a coffee to Maria-Gabriella:
		</h4>
		<%= form_for Gift.new, :html => { :class => "form-inline" } do |f| %>
			<%= f.text_field :from, :class => "input-small", :placeholder => "From" %>
			<%= f.text_field :message, :class => "input-small", :placeholder => "Message" %>
			<%= f.submit "Give Coffee", :class => "btn-success btn-large btn" %>
		<% end %>
	</div>
</div>
